{
  "presets": [
    ["env", { "modules": false }],
    ["es2015", { "modules": false }],
    "stage-2"
  ],
  "plugins": [
    "transform-runtime",
    "lodash",
    ["component", [
      {"libraryName": "com@"},
      {"libraryName": "comp@"},
      {"libraryName": "mixin@"},
      {"libraryName": "dire@"},
      {"libraryName": "api@"}
    ]]
  ],
  "comments": false,
  "env": {
    "test": {
      "presets": ["env", "es2015","stage-2"],
      "plugins": [ "istanbul" ]
    }
  }
}
